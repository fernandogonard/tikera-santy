# Environment
NODE_ENV=development

# Server
PORT=5000

# MongoDB
MONGODB_URI=mongodb://localhost:27017/tikera
# O usar MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/tikera?retryWrites=true&w=majority

# MercadoPago
MERCADOPAGO_ACCESS_TOKEN=your_mercadopago_access_token_here
MERCADOPAGO_PUBLIC_KEY=your_mercadopago_public_key_here

# JWT Secret
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# Email (SendGrid or Mailgun)
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USER=apikey
EMAIL_PASS=your_sendgrid_api_key
EMAIL_FROM=noreply@tikera.com.ar

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Webhook Secret (opcional, para validar webhooks de MercadoPago)
WEBHOOK_SECRET=your_webhook_secret_key
